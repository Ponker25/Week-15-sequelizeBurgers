<div class="container">
  <div class="jumbotron">
  <h1>BURGER MANIA!</h1>

  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2>Burgers on Today's MENU!</h2>
                <ul>
                  {{#each burgers}}
                    {{#unless devoured}}
                      {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                  {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-6">
      <div class="card">
          <div class="card-body">
              <h2>Devoured Burgers!</h2>
                  <ul>
                    {{#each burgers}}
                      {{#if devoured}}
                        {{> burgers/burger-block devoured=true}}
                      {{/if}}
                    {{/each}}
                  </ul>
              </div>
          </div>
    </div>
  </div>

      <div id="addBurger">
          <h2>Add a Delicious Burger to the MENU</h2>
          
          <form class="addBurger">
            <div class="form-group">
              <label for="newBurger">Burger Name:</label>
              <input type="text" id="newBurger" name="name">
            </div>
            <button type="submit">Add Burger</button>
          </form>
      </div>
    </div>
</div>